{
  "compilerOptions": {
    "rootDir": "./src",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "target": "es2015",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "dist"]
}
